generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model users {
  id     Int     @id @default(autoincrement())
  name   String
  email  String
  plants plants[]
}

model plants {
  id       Int      @id @default(autoincrement())
  picture  String?
  name     String
  quantity String
  image    image?   @relation(fields: [picture], references: [id])
  user     users    @relation(fields: [userId], references: [id])
  userId   Int
}

model image {
  id       String   @id @default(cuid())
  publicId String   @unique
  format   String?
  version  String?
  plants   plants[]
}
